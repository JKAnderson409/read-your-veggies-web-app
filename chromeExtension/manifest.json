{
  "name": "Read Your Veggies News Tracker",
  "version": "1.0",
  "description": "Get an enhanced news feed from read-your-veggies.xyz",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "webNavigation",
    "history",
    "http://*/",
    "https://*/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["https://localhost:5000/dashboard"]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
